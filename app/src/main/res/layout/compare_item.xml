<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="5dp"
    card_view:cardBackgroundColor="@color/black_filter"
    android:id="@+id/cv_compare"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/nv_compare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

        </LinearLayout>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/black_filter"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_applicable"
            android:textColor="@color/tanishq_gold"
            android:textSize="16sp"
            android:singleLine="true"
            android:gravity="center|left"
            android:id="@+id/tv_com_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_applicable"
            android:textColor="@color/tanishq_gold"
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:id="@+id/tv_com_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_applicable"
            android:textColor="@color/tanishq_gold"
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:gravity="center|left"
            android:id="@+id/tv_com_price" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_applicable"
            android:textColor="@color/tanishq_gold"
            android:textSize="16sp"
            android:singleLine="true"
            android:gravity="center|left"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_com_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_applicable"
            android:textColor="@color/tanishq_gold"
            android:textSize="16sp"
            android:singleLine="true"
            android:gravity="center|left"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_com_category" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_applicable"
            android:textColor="@color/tanishq_gold"
            android:textSize="16sp"
            android:singleLine="true"
            android:gravity="center|left"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_com_collection" />
    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>