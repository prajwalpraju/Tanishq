<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.feet.tanishq.fragments.User_Manual">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_manual"
            android:textColor="@color/tanishq_gold"
            android:textSize="20sp"
            android:id="@+id/tv_userman_header" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@color/black_recyclelay"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_userman"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:padding="20dp"
                android:textColor="@color/tanishq_gold"
                android:text="@string/user_manual_text" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
