<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        >





    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/nv_product"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/nv_product"
                android:background="@color/cream"
                android:gravity="center"
                android:padding="5dp"
                android:singleLine="true"
                android:text="@string/divyam"
                android:textColor="@color/green_fungus"
                android:textSize="19sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_online_exclusive"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:src="@drawable/online_exclusive_units"
            android:visibility="gone" />

    </FrameLayout>

    </android.support.v7.widget.CardView>
