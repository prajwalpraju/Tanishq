<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:splitMotionEvents="false"
    android:layout_height="match_parent"
    android:background="@drawable/bg_without_border"
    tools:context="com.feet.tanishq.Tanishq_Screen">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_display"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                >
                <ImageView
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:id="@+id/iv_toggle"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menu_bar"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/galleria_header_unit"
                    android:id="@+id/iv_logo3"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:gravity="right">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/asif_sb"
                        android:textColor="@color/tanishq_gold"
                        android:textSize="19sp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/tv_welcome_user"
                        android:gravity="right" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logout"
                        android:padding="5dp"
                        android:textColor="@color/tanishq_gold"
                        android:textSize="12sp"
                        android:id="@+id/tv_logout"
                        android:gravity="right" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:weightSum="4"
                        android:layout_height="wrap_content">


                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/collection"
                                android:layout_weight="1"
                                android:id="@+id/iv_collection" />




                        <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/wishlist"
                            android:id="@+id/iv_wish" />

                            <TextView
                                android:id="@+id/tv_wish_count"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:textSize="9sp"
                                android:textColor="@color/green_fungus"
                                android:singleLine="true"
                                android:background="@drawable/circle_lay"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:visibility="gone"
                                android:text="2"/>

                          </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/compare"
                                android:id="@+id/iv_compare" />
                            <TextView
                                android:id="@+id/tv_compare_count"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:textSize="9sp"
                                android:textColor="@color/green_fungus"
                                android:singleLine="true"
                                android:background="@drawable/circle_lay"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="right"
                                android:visibility="gone"
                                android:gravity="center"
                                android:text="2"/>

                        </FrameLayout>



                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/help"
                            android:layout_weight="1"
                            android:id="@+id/iv_help" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="11dp"
                    android:visibility="visible"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/ll_search_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:tint="@color/cream"
                            android:src="@drawable/search_bar"
                            />
                        <TextView
                            android:id="@+id/tv_seach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/cream"
                            android:text="Search"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_filter_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="15dp"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/cream"
                            android:src="@drawable/filter_icon"
                            />
                        <TextView
                            android:id="@+id/tv_filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/cream"
                            android:text=" Filter"/>
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:tint="@color/cream"
                        android:src="@drawable/back_icon"
                        />
                    <TextView
                        android:id="@+id/tv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"

                        android:layout_marginRight="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:paddingBottom="5dp"
                        android:textColor="@color/cream"
                        android:text="@string/Back"/>

                </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
            <!--<View-->
                <!--android:id="@+id/view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:background="@color/bt_dark_gold"-->
                <!--android:layout_height="1dp">-->

            <!--</View>-->

            <TextView
                android:id="@+id/tv_top_dir_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tanishq_gold"
                android:textSize="18sp"
                android:gravity="center"
                />

            <!--<View-->
                <!--android:id="@+id/view2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:background="@color/bt_dark_gold"-->
                <!--android:layout_height="1dp">-->

            <!--</View>-->

            <FrameLayout
                android:id="@+id/fl_fragment"
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="match_parent">

            </FrameLayout>


        </LinearLayout>






    </FrameLayout>



</RelativeLayout>
